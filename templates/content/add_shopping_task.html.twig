{% extends 'layout.html.twig' %}

{% block content %}
    {% form_theme form 'jquery.collection.html.twig' %}
    {{ form(form) }}
    <script src="{{ asset('js/jquery.collection.js') }}"></script>

    <script type="text/javascript">
        $('.my-selector').collection({
            allow_up: false,
            allow_down: false,
            add: '<a href="#">[ + ]</a>',
            remove: '<a href="#">[ - ]</a>',
            duplicate: '<a href="#">[ # ]</a>',
            add_at_the_end: true,
            fade_in: true,
            fade_out: true,
        });
    </script>
{% endblock %}
