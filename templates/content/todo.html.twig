{% extends 'layout.html.twig' %}

{% block content %}
    {% if tasks|length > 0 %}
        {% for task in tasks %}
            <div class="card container-sm mt-2">
                <div class="card-body">
                    {% if task.type == "PlainTask" %}
                        <h5 class="card-title">{{ task.title }}</h5>
                        <p class="card-text">{{ task.message }}</p>
                        <a href="{{ path('removeTask', {taskId: task.id }) }}" class="mr-3" style="text-decoration: none; color: red;"><i class="bi bi-trash"></i></a>
                        <a href="{{ path('updateTask', {taskId: task.id }) }}" style="text-decoration: none; color: blue;"><i class="bi bi-pencil"></i></a>
                    {% else %}
                        <h5 class="card-title">{{ task.title }}</h5>
                        <ul>
                            {% for product in task.products %}
                                <li>{{ product }}</li>
                            {% endfor %}
                        </ul>
                        <a href="{{ path('removeShoppingTask', {taskId: task.id }) }}" class="mr-3" style="text-decoration: none; color: red;"><i class="bi bi-trash"></i></a>
                        <a href="{{ path('updateShoppingTask', {taskId: task.id }) }}" style="text-decoration: none; color: blue;"><i class="bi bi-pencil"></i></a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p>No todo tasks added yet...</p>
    {% endif %}

    <div class="mt-3">
        <a href="{{ path('addTask') }}">+ Add task</a>
    </div>

{% endblock %}